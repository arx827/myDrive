{
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true, // 存檔自動解決lint問題
    "source.fixAll.tslint": true,
  },
  // "editor.formatOnSave": true,
  // eslint 支援 vue
  "eslint.validate": [
    "vue",
    "vue-html",
    "javascript",
    "typescript",
    "typescriptreact",
    "sass",
    "scss",
  ],
  "vetur.format.defaultFormatter.js": "none",
  // 關閉 vetur 驗證
  "vetur.validation.template": true,
  "vetur.format.options.tabSize": 2,
  // "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [
      ".html",
      ".js",
      ".ts",
      ".vue"
    ]
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "files.autoSave": "onFocusChange",
  // "files.autoSave": "afterDelay",
  // "files.autoSave": "off",
  // "window.zoomLevel": 1,
  "vue3snippets.enable-compile-vue-file-on-did-save-code": false,
  "files.eol": "\n",
  // "explorer.confirmDelete": false,
  // "vetur.format.defaultFormatter.js": "none",

  /* 須安裝 TODO Highlight 套件
  * 下載路徑：https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight
  * 檢視所有TODO方法：快捷『F1』，輸入『TODOs』，聚焦於TODOs檢視
  */
  "todohighlight.keywords": [
    "DEBUG:",
    "REVIEW:",
    "NOTE:",
    {
        "text": "TEST:",
        "backgroundColor": "#BBFF92",
        "overviewRulerColor": "#333"
    },
    {
        "text": "API:",
        "color": "#000",
    },
    {
        "text": "HACK:",
        "color": "#000",
        "isWholeLine": false,
    }
  ],
}
